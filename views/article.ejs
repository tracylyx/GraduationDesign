<%= include header %>
<div class="container">
	<div class="row">
		<!-- 左侧 -->
		<div class="col-xs-9">
			<!-- 定位 -->
			<%= include location %>
			<div class="index-post-info jumbotron post-detail">
				<h4><%= post.title %></h4>
				<!-- author info -->
				<div class="author-info">
					<span class="icon-author"><%= post.name %></span>
					<span class="icon-time"><%= post.time.minute %></span>
					<span class="icon-hot">热度<em><%= post.pv %></em></span>
					<span class="icon-comment">评论<em>22</em></span>
					<% if ( user && ( user.name == post.name ) ) { %>   <!-- 通过session中的用户名是否存在来判断和当前页面的作者名是否相同 -->
						<span class="icon-comment"><a href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
						<span class="icon-comment"><a href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
					<% } %>
				</div>
				<!-- 显示标签 -->
				
					<% post.tags.forEach( function( tag, index ) { %>
						<% if ( tag ) { %>
							<a href="/tags/<%= tag %>"><%= tag %></a>
						<% } %>
					<% }); %>
				
				<p><%- post.post  %></p>
			</div>
		</div>
		<!-- 右侧 -->
		<%- include sidebar %>
	</div>
</div>
<%= include footer %>
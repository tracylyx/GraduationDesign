<%- include header %>
<div class="container">
	<div class="row">
		<!-- 左侧 -->
		<div class="col-xs-9">
			<!-- 定位 -->
			<%= include location %>
			<form method="post">
				<div class="weite-container">
					<div class="write-title" >
						<input type="text" name="title" placeholder="请输入文章标题">
					</div>
					<div class="write-tags cf">
						<input type="text" name="tag1" placeholder="标签">
						<input type="text" name="tag2" placeholder="标签">
						<input type="text" name="tag3" placeholder="标签">
						<input type="text" name="tag4" placeholder="标签">
					</div>
					<div class="write-content">
						<textarea name="post" id=""  rows="20" placeholder="请输入正文..."></textarea>
					</div>
				</div>
				<input type="submit" class="btn btn-default write-send" value="发布">
			</form>
		</div>
		<!-- 右侧 -->
		<%- include sidebar %>
	</div>
</div>
<%- include footer %>
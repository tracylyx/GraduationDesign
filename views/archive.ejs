<%- include header %>
<div class="container">
	<div class="row">
		<!-- 左侧 -->
		<div class="col-md-9">
			<!-- 定位 -->
			<%= include location %>
			<div class="jumbotron index-post-info">
				<ul class="archive">
					<% var lastYear = 0 %> 		<!-- 设定一个变量，用来判断是否和上次已经显示的年份相同，相同的不在显示年份，不通则显示 -->
					<% posts.forEach(function (post, index) { %>
						<% if (lastYear != post.time.year) { %>
							<li><h3><%= post.time.year %></h3></li>
						<% lastYear = post.time.year } %> 		<!-- 通过这句来重新赋值lastYear，从而进行比较 -->
						<li><a href="/u/<%= post.name %>/<%= post.day %>/<%= post.title %>"><%= post.title %></a><span class='archive-time'><%= post.time.day %></span></li>
					<% }) %>
				</ul>
			</div>
		</div>
		<!-- 右侧 -->
		<div class="col-md-3">
			<!-- 本站搜索 -->
			<%- include searchkey %>
			<!-- 近期文章 -->
			<div class="sb-box top-post">
				<h4 class="sb-line">近期文章</h4>
				<ul class="sb-cont cf">
				<% posts.forEach(function(post, index) { %>
				<% var count = 4 %>
					<% if (count--) { %>
						<li>
							<a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" title="<%= post.title %>" class="sb-post-title"><%= post.title %></a>
							<span class="post-data"><%= post.time.day %></span>
						</li>
					<% } %>
				<% }) %>
				</ul>
			</div>
		<%- include sidebar %>
	</div>
</div>
<%- include footer %>
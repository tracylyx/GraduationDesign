<%- include header %>
<div class="container">
	<div class="row">
		<!-- 左侧 -->
		<div class="col-xs-9">
				<% posts.forEach( function( post, index ) { %>
					<div class="jumbotron index-post-info">
						<div class="post-brief cf">
							<h4 class="post-title"><a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h4>
							<!-- post缩略图 -->
							<div class="post-brief-pic">
								<!-- 配图 -->
								<img src="images/bg.jpg" alt="配图">
							</div>
							<div class="post-brief-cont">
								<!-- author info -->
								<div class="author-info">
									<span class="icon-author"><%= post.name %></span>
									<span class="icon-time"><%= post.time.day %></span>
									<span class="icon-hot">热度<em><%= post.pv %></em></span>
									<!-- <span class="icon-comment">评论<em>100</em></span> -->
								</div>
								<div class="post-box">
									<p><%- post.post %></p>
								</div>
								
							</div>
						</div>
					</div>	
				<% }) %>
			<!-- 分页 -->
			<%- include paging %>
		</div>
		<!-- 右侧 -->
		<div class="col-xs-3">
			<!-- 本站搜索 -->
			<div class="input-group">
				<form action="/search" method="get">

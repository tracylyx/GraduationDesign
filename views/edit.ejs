<%- include header %>
<div class="container">
	<div class="row">
		<!-- 左侧 -->
		<div class="col-xs-9">
			<!-- 定位 -->
			<%- include location %>
			<form method="post">
				<div class="weite-container">
					<div class="write-title" >
						<input type="text" name="title" value="<%= post.title %>" disabled="disabled">
					</div>
